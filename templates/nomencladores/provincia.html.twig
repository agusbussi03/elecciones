{% extends "layout.html.twig" %}

{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Provincias</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {% if mensaje is defined %}
                    {% if mensaje.codigo==0 %}<div class="alert alert-success alert-dismissable">{%endif%}
                        {% if mensaje.codigo==1 %}<div class="alert alert-danger alert-dismissable">{%endif%}
                            {% if mensaje.codigo==2 %}<div class="alert alert-warning alert-dismissable">{%endif%}
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                {{mensaje.texto}} 
                            </div>
                        {% endif %}

                        <div class="panel panel-default">
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Votantes P</th><th>Votantes N</th>
                                            <th>Mesas</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in provincia %}
                                            <tr class="odd gradeX">
                                                <td>{{item.nombre}}</td>
                                                <td>{{item.votantes_provincia}}</td>
                                                <td>{{item.votantes_nacion}}</td>
                                                <td>{{item.mesas}}</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" onclick="window.location.href = '{{ path('secciones',{'provincia':item.id}) }}';">Departamentos</button>
                                                    <button type="button" class="btn btn-primary" onclick="window.location.href = '{{ path('filtrosgobernador') }}';">Cargos gobernador</button>
                                                    <button type="button" class="btn btn-primary" onclick="window.location.href = '{{ path('filtrosgobernador') }}';">Cargos diputados</button>
                                                    <button type="button" class="btn btn-danger" onclick="window.location.href = '{{ path('provincia_delete',{'id':item.id}) }}';">Borrar</button>

                                                </td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>
                            </div>     
                        </div>
                    </div>
                </div>
                <div class="row">
                    <form role="form" action="{{path('provincia_add')}}" method="POST">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input class="form-control" name="nombre" type="text" size="40">
                            <label>Votantes Nacionales</label>
                            <input class="form-control" name="electores_nacion" type="number" size="4" min="1" >
                            <label>Votantes Provinciales</label>
                            <input class="form-control" name="electores_provincia" type="number" size="4" min="1">
                            <label>Cantidad de mesas</label>
                            <input class="form-control" name="mesas" type="number" size="4" min="1">
                            <input type="submit"  class="btn btn-primary" value="Crear nueva">
                        </div>
                    </form>
                </div>
            </div>



        {% endblock %}    

        {% block final %}
            <!-- DataTables JavaScript -->
            <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
            <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
            <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
            <script>
                                                        $(document).ready(function () {
                                                            $('#dataTables-example').DataTable({
                                                                responsive: true
                                                            });
                                                        });
            </script>


        {% endblock %}


