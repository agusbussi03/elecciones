{% extends "layout.html.twig" %}

{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cargos Concejal {{circuito.nombre}}</h1>
                <a href="{{ path('circuitos',{'seccion':circuito.seccion_id}) }}">volver</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="filtrosgobernador" method="POST">
                            <table width="100%" class="table table-striped table-bordered table-hover" >
                                <thead>
                                    <tr>
                                        <th>Partido</th>
                                        <th>Lista</th>
                                        <th>Candidato</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in cargos %}
                                        <tr class="odd gradeX">
                                            <td>{{item.id_partido}}-{{item.nombre_partido}}</td>
                                            <td>{{item.id_lista}}-{{item.nombre_lista}}</td>
                                            
                                             <td>{{item.apellido}} {{item.nombre}}</td>
                                             <td>{%if item.foto|length >0 %}<img width='100px' src="data:image/png;base64,{{item.foto}}"{%endif%}</td>
                                            <td>                                                 
                                                <button type="button" class="btn btn-danger" 
                                                        onclick="window.location.href = '{{ path('cargosconcejal_delete',{'id':item.id_cargo}) }}';">Borrar</button>
                                            </td>                                   
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>


                        </form>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form role="form" action="{{path('cargosconcejal_add',{'id':circuito.id})}}" method="POST">
                            <select name="id_lista">
                                {% for item in partido_lista %}
                                    <option value="{{item.id}}">{{item.id_partido}}-{{item.nombre_partido}} {{item.id_lista}}-{{item.nombre_lista}}</option>
                                {% endfor %}
                            </select>
                            <input type="submit" value="Grabar" class="btn btn-primary" />
                    </div>              
                </div>                 
            </div>
        </div>
    </div>

{% endblock %}    

{% block final %}
    <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>



{% endblock %}


