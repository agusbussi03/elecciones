{% extends "layout.html.twig" %}


{% block content %}
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">Gestion de mesas testigos</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            pbussi
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i>
                    <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li class="divider"></li>

                    <li>
                        <a href="/elecciones/web/index_dev.php/logout">
                            <i class="fa fa-sign-out fa-fw"></i>
                            Logout</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mesa {{ mesa.nro }}

                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Seccion:{{mesa.sec}} - Circuito:{{mesa.cirnro}}{{mesa.cirlet}}  Electores:{{mesa.electo}} 
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-bodyvv">
                        <form id="formu" method="POST">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Partido</th>
                                        <th>Lista</th>
                                            {%if configuracion.intermedia==1%}
                                            <th>Gobernador</th>
                                            <th>Diputados</th>
                                            <th>Senador</th>
                                            {%endif%}
                                        <th>Intendente</th>
                                        <th>Concejal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set mascara=mesa.getmascara() %}
                                    {% for item in mascara.0 %}
                                        <tr class="odd gradeX" id="r_{{item.renglon}}">
                                            <td>
                                                {{ item.pspar }} - {{ item.parnombre }}
                                            </td>
                                            <td>
                                                {{ item.pslista }} - {{ item.nombre }}
                                            </td>
                                            {%if configuracion.intermedia==1%}
                                                <td>
                                                    {% if item.psgob=='R' %}
                                                        {% if filtros[0][0][''][item.pspar][item.pslista]['G'] is not defined %} 
                                                            <input class="form-control inputs" name="G,0,0,0,{{item.pspar}},{{item.pslista}}" value="" type="number" size="3" min="0" max="{{mesa.electo}}">
                                                        {%endif%} 
                                                    {% endif %}
                                                </td>

                                                <td>
                                                    {% if item.psdip=='R' %}
                                                        {% if filtros[0][0][''][item.pspar][item.pslista]['D'] is not defined %} 
                                                            <input class="form-control inputs" value="" name="D,0,0,0,{{item.pspar}},{{item.pslista}}" type="number" size="3" min="0" max="{{mesa.electo}}">
                                                        {%endif%}
                                                    {% endif %}
                                                </td>

                                                <td>
                                                    {% if item.pssen=='R' %}
                                                        {% if filtros[item.sec][0][''][item.pspar][item.pslista]['S'] is not defined %} 
                                                            <input class="form-control inputs" value="" name="S,{{item.sec}},0,0,{{item.pspar}},{{item.pslista}}" type="number" size="3" min="0" max="{{mesa.electo}}">
                                                        {%endif%}
                                                    {% endif %}
                                                </td>
                                            {%endif%}

                                            <td>
                                                {% if item.psint=='R' %}
                                                    {% if filtros[item.sec][item.cirnro][item.cirlet][item.pspar][item.pslista]['I'] is not defined %} 
                                                        <input class="form-control inputs" value='' name="I,{{item.sec}},{{item.cirnro}},{{item.cirlet}},{{item.pspar}},{{item.pslista}}" type="number" size="3" min="0" max="{{mesa.electo}}">
                                                    {%endif%}
                                                {% endif %}
                                            </td>                                              

                                            <td>
                                                {% if item.pscon=='R' %}
                                                    {% if filtros[item.sec][item.cirnro][item.cirlet][item.pspar][item.pslista]['C'] is not defined %} 
                                                        <input class="form-control inputs" value="" name="C,{{item.sec}},{{item.cirnro}},{{item.cirlet}},{{item.pspar}},{{item.pslista}}" type="number" size="3" min="0" max="{{mesa.electo}}">
                                                    {%endif%}
                                                {% endif %}
                                            </td> 
                                        </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </form>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#wrapper -->



{% endblock %}    

{% block final %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.inputs')[0].focus();
        });

        $('.inputs').keydown(function (e) {
            if (e.keyCode == 13) {
                form = $('#formu');
                focusable = form.find('input,select,textarea').filter(':visible');
                next = focusable.eq(focusable.index(this) + 1);
                if (next.length) {
                    next.focus();
                } else {
                    form.submit();
                }
                return false;
            }
        }
        );



    </script>


{% endblock %}


