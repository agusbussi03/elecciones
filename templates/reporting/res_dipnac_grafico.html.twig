<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="refresh" content="30">
        <style>

            .container{
                width:100%;
                font-family: Arial;
            }

            .record{
                float: left;
                width: 100%;
                border: 1px solid #ccc;
                background-color: #f0f0f0;
                margin-bottom: 2px;
                -moz-border-radius: 0px 10px 10px 0px;
                -moz-border-radius: 0px 10px 10px 0px;
            }

            .bar {
                background-color: red;
                float: left;
                clear: left;
                height: 30px;
            }

            .bar span{
                font-size: 18px;
                font-weight: bold;
                color: #fff;
                float: left;
                margin-left: 5px;
                margin-top: 7px;
            }

            .p{
                padding-top: 3px;
                float: right;
                color: #6D8591;
                clear: right;
                font-size: 12px;
                font-weight: bold;
                height: 25px;
            }

            .p span{
                font-size: 18px;
                font-weight: bold;
                float: left;
                margin-right: 5px;
                margin-top: 5px;
            }

        </style>
    </head>
    <body>
        <div class="container" style="margin-bottom:20px;">
            <div style='width: 50%;float: left'>
                <h2 style="margin-top:0;margin-bottom: 0">Diputados Nacionales - PORCENTAJES ({{session.tiporeporte}})</h2>
                <b>Ultima actualizaci&oacute;n: {{config.ultimaactualizacion}}</b>
                <button type="button" class="btn btn-sm btn-default" onclick="window.location.href = '?tiporeporte=EMITIDOS';">Emitidos</button>
                <button type="button" class="btn btn-sm btn-default" onclick="window.location.href = '?tiporeporte=VALIDOS';">Validos</button>
                <button type="button" class="btn btn-sm btn-default" onclick="window.location.href = '?tiporeporte=AFIRMATIVOS';">Afirmativos</button>

            </div>
            <div style='float: left;width:45%;'>
                {%if session.admin==1%}
                    <button type="button" class="btn btn-sm btn-default"
                            onclick="window.location.href = '{{ path('rep_dipnac_seccion',{'id':1,tipo:'votos'}) }}';">Votos</button>
                    <button type="button" class="btn btn-sm btn-default"
                            onclick="window.location.href = '{{ path('rep_dipnac_seccion',{'id':1,tipo:'porcentajes'}) }}';">Porcentaje</button>
                {%endif%}
                <button type="button" class="btn btn-sm btn-default"
                        onclick="window.location.href = '{{ path('rep_dipnac_seccion',{'id':1,tipo:'porcentajes_ponderado'}) }}';">Porc. Ponderado</button>
                <button type="button" class="btn btn-sm btn-default"
                        onclick="window.location.href = '{{ path('rep_dipnac_seccion',{'id':1,tipo:'graficos'}) }}';">Gr&aacute;fico</button>
                <button type="button" class="btn btn-sm btn-default"
                        onclick="window.location.href = '{{ path('rep_dipnac_seccion',{'id':1,tipo:'distribucion'}) }}';">Distribuci√≥n</button>
                <button type="button" class="btn btn-sm btn-default"
                        onclick="window.location.href = '{{ path('rep_nacional') }}';">Home</button>
            </div>
        </div>
        <div style="clear: both;height:25px;"></div>
        <div style="width:33%;float:left;">
            {% for clave,item in totales %}
                {%if loop.index>0  and clave!="NULOS--" and clave!="EMITIDOS" %}
                    <div class="container">   
                        <div style="width:45%;float:left;text-align:right;">
                            <p style="float:left;font-size: 15px; font-weight: bold;margin-right: 5px; margin-top: 1px;width:80%;">
                                {{config.limpianombre(clave)|slice(0, 20)}}</p></span>
                                {%if partidos[item.id] is defined and partidos[item.id].logo!=""%}
                                <img src="data:image/png;base64,{{partidos[item.id].logo}}" width="30px" style="float:right;"/>
                            {%endif%}

                        </div>
                        <div style="width:45%;float:left;text-align:left;">
                            <div class="record"><div class="bar" style="width:{{item.porcentaje}}%;"><span></span></div><div class="p"><span>{{item.porcentaje|number_format(2, '.', ',')}}%</span></div></div>
                        </div>
                    </div> 
                    <div style="clear: both;height:5px;"></div>
                {%endif%}
            {%endfor%}
        </div>
        <div style="width:33%;float:left;">
            {% for clave,item in totales_partido %}
                {%if loop.index>0%}
                    <div class="container">   
                        <div style="width:45%;float:left;text-align:right;">
                            <p style="float:left;font-size: 15px; font-weight: bold;margin-right: 5px; margin-top: 1px;width:80%;">
                                {{clave|slice(0, 20)}}</p></span>
                                {%if partidos[item.id] is defined and partidos[item.id].logo!=""%}
                                <img src="data:image/gif;base64,{{partidos[item.id].logo}}" width="30px" style="float:right;"/>{%endif%}

                            </div>
                            <div style="width:45%;float:left;text-align:left;">
                                <div class="record"><div class="bar" style="width:{{item.porcentaje}}%;"><span></span></div><div class="p"><span>{{item.porcentaje|number_format(2, '.', ',')}}%</span></div></div>
                            </div>
                        </div> 
                        <div style="clear: both;height:5px;"></div>
                    {%endif%}
                    {%endfor%}
                    </div>
                    <div style="width:33%;float:left;">
                        {%set candidatos=config.ordenacandidatos(totales)%}
                        {% for clave,item in candidatos %}
                            {%if loop.index>0 and clave!="NULOS--" and clave!="EMITIDOS"%}
                                <div class="container">   
                                    <div style="width:45%;float:left;text-align:right;">
                                        <p style="float:left;font-size: 15px; font-weight: bold;margin-right: 5px; margin-top: 1px;width:70%;">{{config.obtienedipnac(clave)|slice(0, 20)}}</p></span>
                                        <img src="data:image/gif;base64,{{config.obtienedipnacfoto(clave)}}" width="30px" style="float:right;"/>
                                        {%if partidos[item.id] is defined%}
                                            <img src="data:image/png;base64,{{partidos[item.id].logo}}" width="30px" style="float:right;"/>
                                        {%endif%}

                                    </div>
                                    <div style="width:45%;float:left;text-align:left;">
                                        <div class="record"><div class="bar" style="width:{{item.porcentaje}}%;"><span></span></div><div class="p"><span>{{item.porcentaje|number_format(2, '.', ',')}}%</span></div></div>
                                    </div>
                                </div> 
                                <div style="clear: both;height:5px;"></div>
                            {%endif%}
                        {%endfor%}
                    </div>
                </body>
            </html>