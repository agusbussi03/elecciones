{% extends "layout.html.twig" %}

{% block content %}
    {#% include "navigator.html.twig" %#}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Concejales</h1>
            </div>
        </div>
        {% if mensaje is defined %}   
            <div {% if mensaje.codigo==0 %}class="alert alert-success alert-dismissable"
            {%endif%}
            {% if mensaje.codigo==1 %}class="alert alert-danger alert-dismissable"{%endif%}
            {% if mensaje.codigo==2 %}class="alert alert-warning alert-dismissable"{%endif%}
            >
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            {{mensaje.texto}} 
        </div>
        {%else%}
            <div class="row">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="font-size:12px;">
                                Seccional
                            </th>
                            {#{dump(votos)}#}
                            {% for clave,item in votos|first %}
                                <th style="font-size:12px;">
                                    {{clave}}
                                </th>
                            {%endfor%}
                             <th style="font-size:12px;">
                                Total
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        {% for clave,item in votos %}

                            <tr class="odd gradeX" id="r_{{loop.index}}">
                                <td>
                                    {{ clave }}
                                </td> 
                                {% set total=0%}
                                {% for item2 in item %}
                                    <td> 
                                        {{item2}}
                                    </td>
                                    {%set total=total+item %}
                                {%endfor%}
                                <td>{{total}}</td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        {%endif%}
        </div>

        {% endblock %}    

            {% block final %}


            {% endblock %}


