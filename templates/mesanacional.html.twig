{% extends "layout.html.twig" %}

{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mesa Nacional {{ mesa.nro }}
               {# {%if mesa.testigo==1%}
                 (Testigo)
                <button type="button" style="float: right" class="btn btn-primary btn-lg" onclick="window.location.href='{{ path('testigo',{'nro':mesa.nro,'accion': 'unsetTestigo'}) }}';">Dejar de ser mesa testigo</button>
                {%else%} 
                    <button type="button"  style="float: right" class="btn btn-primary btn-lg"  onclick="window.location.href='{{ path('testigo',{'nro':mesa.nro,'accion': 'setTestigo'}) }}';">Establecer como mesa testigo</button>
                {% endif %}
                </h1> #}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                         Electores:{{mesa.electo}} 
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Partido</th>
                                    <th>Lista</th>
                                    <th>Diputado</th>
                                    <th>Senador</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set mascara=mesa.getmascara() %}
                                {% for item in mascara.0 %}
                                    <tr class="odd gradeX" id="r_{{item.renglon}}">
                                        <td>
                                            {{ item.pspar }} {{ item.partido }} 
                                        </td>
                                        <td>
                                            {{ item.pslista }} {{ item.lista }}
                                        </td>
                                        

                                        <td>
                                            {% if item.diputado==1 %}
                                                {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                {% if filtros[item.partido][item.lista]['D'] is defined %} 
                                                    {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                {%endif%}
                                                <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="D,{{item.pspar}},{{item.pslista}}">
                                                    <i class="fa {{clasetilde}} fa-check"></i>
                                                </button>
                                            {% endif %}
                                        </td>                                              

                                        <td>
                                            {% if item.senador==1 %}
                                                {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                {% if filtros[item.partido][item.lista]['S'] is defined %} 
                                                    {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                {%endif%}
                                                <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="S,{{item.pspar}},{{item.pslista}}">
                                                    <i class="fa {{clasetilde}} fa-check"></i>
                                                </button>
                                            {% endif %}
                                        </td> 
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#wrapper -->



{% endblock %}    

{% block final %}
    <script>


        $(window).bind('load', function () {
            $('img').each(function () {
                if ((typeof this.naturalWidth != "undefined" &&
                        this.naturalWidth == 0)
                        || this.readyState == 'uninitialized') {
                    $(this).attr('src', '{{asset('imagenes')}}/lol.png');
                }
            });
        });
        $(".btn-circle").click(function () {
            if (this.value == 1) {
                $.post("{{ path('filtro',{'accion': 'agregarnacional'}) }}", {'datos': this.name}, function (data, textStatus, jqxhr) {
                    // validar retorno
                });
                this.value = 0;
                $(this).attr("class", 'btn btn-warning btn-circle');
                $(this).children().attr("class", "fa fa-times");
            } else {
                $.post("{{ path('filtro',{'accion': 'quitarnacional'}) }}", {'datos': this.name}, function (data, textStatus, jqxhr) {
                    //validar retorno
                });
                this.value = 1;
                $(this).attr("class", 'btn btn-info btn-circle');
                $(this).children().attr("class", "fa fa-check");
            }
        });
    </script>


{% endblock %}


