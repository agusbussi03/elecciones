{% extends "layout.html.twig" %}

{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mesas testigo {{provincia.nombre}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href='{{ path('provincia',{'id':provincia.id}) }}'>VOLVER A {{provincia.nombre}}</a></li>
                </ol>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Mesas seleccionadas como muestra
                    </div>
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Mesa</th>
                                    <th>Provincia</th>
                                    <th>Departamento</th>
                                    <th>Localidad</th>
                                    <th>Seccional</th>
                                    <th>Electores P.</th>
                                    <th>Electores N.</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in testigos%}
                                    <tr class="odd gradeX">
                                        <td>{{item.numero}}</td>
                                        <td>{{item.p_nombre}}</td>
                                        <td><a href="{{path('circuitos',{'seccion':item.s_id})}}">{{item.s_nombre}}</a></td>
                                        <td>{{item.c_nombre}}</a></td>
                                        <td>{{item.sec_nombre}}</td>
                                        <td>{{item.electores_provincia}}</td>
                                        <td>{{item.electores_nacion}}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}    

{% block final %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}