{% extends "layout.html.twig" %}

{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mesa {{ mesa.nro }}
                {%if mesa.testigo==1%}
                 (Testigo)
                <button type="button" style="float: right" class="btn btn-primary btn-lg" onclick="window.location.href='{{ path('testigo',{'nro':mesa.nro,'accion': 'unsetTestigo'}) }}';">Dejar de ser mesa testigo</button>
                {%else%} 
                    <button type="button"  style="float: right" class="btn btn-primary btn-lg"  onclick="window.location.href='{{ path('testigo',{'nro':mesa.nro,'accion': 'setTestigo'}) }}';">Establecer como mesa testigo</button>
                {% endif %}
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Seccion:{{mesa.sec}} - Circuito:{{mesa.cirnro}}{{mesa.cirlet}}  Electores:{{mesa.electo}} 
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Partido</th>
                                    {% if configuracion.tipo==0%}<th>Lista</th>{%endif%}
                                        {%if configuracion.intermedia==1%}
                                        <th>Gobernador</th>
                                        <th>Diputados</th>
                                        <th>Senador</th>
                                        {%endif%}
                                    <th>Intendente</th>
                                    <th>Concejal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set mascara=mesa.getmascara() %}
                                {% for item in mascara.0 %}
                                    <tr class="odd gradeX" id="r_{{item.renglon}}">
                                        <td>
                                            <!--a class="thumbnail"-->
                                            <img src="{{ asset('imagenes/partido')}}/{{ item.pspar }}.jpg" height="50px">
                                            <!--/a-->
                                            {{ item.pspar }} - {{ item.parnombre }}
                                        </td>
                                       {% if configuracion.tipo==0%}
                                        <td>
                                            <img src="{{ asset('imagenes/lista')}}/001{{ item.pslista }}.jpg" height="50px">
                                            {{ item.pslista }} - {{ item.nombre }}
                                        </td>
                                       {%endif%} 
                                        {%if configuracion.intermedia==1%}
                                            <td>
                                                {% if item.psgob=='R' %}
                                                    {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                    {% if filtros[0][0][''][item.pspar][item.pslista]['G'] is defined %} 
                                                        {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                    {%endif%}
                                                    <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="G,0,0,0,{{item.pspar}},{{item.pslista}}">
                                                        <i class="fa {{clasetilde}} fa-check"></i>
                                                    </button>
                                                {% endif %}
                                            </td>


                                            <td>
                                                {% if item.psdip=='R' %}
                                                    {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                    {% if filtros[0][0][''][item.pspar][item.pslista]['D'] is defined %} 
                                                        {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                    {%endif%}
                                                    <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="D,0,0,0,{{item.pspar}},{{item.pslista}}">
                                                        <i class="fa {{clasetilde}} fa-check"></i>
                                                    </button>
                                                {% endif %}
                                            </td>


                                            <td>
                                                {% if item.pssen=='R' %}
                                                    {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                    {% if filtros[item.sec][0][''][item.pspar][item.pslista]['S'] is defined %} 
                                                        {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                    {%endif%}
                                                    <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="S,{{item.sec}},0,0,{{item.pspar}},{{item.pslista}}">
                                                        <i class="fa {{clasetilde}} fa-check"></i>
                                                    </button>
                                                {% endif %}
                                            </td>
                                        {%endif%}

                                        <td>
                                            {% if item.psint=='R' %}
                                                {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                {% if filtros[item.sec][item.cirnro][item.cirlet][item.pspar][item.pslista]['I'] is defined %} 
                                                    {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                {%endif%}
                                                <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="I,{{item.sec}},{{item.cirnro}},{{item.cirlet}},{{item.pspar}},{{item.pslista}}">
                                                    <i class="fa {{clasetilde}} fa-check"></i>
                                                </button>
                                            {% endif %}
                                        </td>                                              

                                        <td>
                                            {% if item.pscon=='R' %}
                                                {% set value=1 %}{%set claseboton='btn-info' %}{%set clasetilde='fa-check' %}
                                                {% if filtros[item.sec][item.cirnro][item.cirlet][item.pspar][item.pslista]['C'] is defined %} 
                                                    {%set value=0 %}{%set claseboton='btn-warning' %}{%set clasetilde='fa-times' %}
                                                {%endif%}
                                                <button type="button" class="btn {{claseboton}} btn-circle" value={{value}} name="C,{{item.sec}},{{item.cirnro}},{{item.cirlet}},{{item.pspar}},{{item.pslista}}">
                                                    <i class="fa {{clasetilde}} fa-check"></i>
                                                </button>
                                            {% endif %}
                                        </td> 
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#wrapper -->



{% endblock %}    

{% block final %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script>


        $(window).bind('load', function () {
            $('img').each(function () {
                if ((typeof this.naturalWidth != "undefined" &&
                        this.naturalWidth == 0)
                        || this.readyState == 'uninitialized') {
                    $(this).attr('src', '{{asset('imagenes')}}/lol.png');
                }
            });
        });
        $(".btn-circle").click(function () {
            if (this.value == 1) {
                $.post("{{ path('filtro',{'accion': 'agregar'}) }}", {'datos': this.name}, function (data, textStatus, jqxhr) {
                    // validar retorno
                });
                this.value = 0;
                $(this).attr("class", 'btn btn-warning btn-circle');
                $(this).children().attr("class", "fa fa-times");
            } else {
                $.post("{{ path('filtro',{'accion': 'quitar'}) }}", {'datos': this.name}, function (data, textStatus, jqxhr) {
                    //validar retorno
                });
                this.value = 1;
                $(this).attr("class", 'btn btn-info btn-circle');
                $(this).children().attr("class", "fa fa-check");
            }
        });
    </script>


{% endblock %}


